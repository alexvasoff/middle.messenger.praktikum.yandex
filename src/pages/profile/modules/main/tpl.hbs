<div class="registration">
    <div class="registration__title">
        <h1>Настройки пользователя</h1>
    </div>
    <div class="registration__fields">
        <div class="field">{{{ avatar }}}</div>
        <div class="field">{{{ mail }}}</div>
        <div class="field">{{{ login }}}</div>
        <div class="field">{{{ name }}}</div>
        <div class="field">{{{ surname }}}</div>
        <div class="field">{{{ displayName }}}</div>
        <div class="field">{{{ phone }}}</div>
    </div>
    <div class="registration__buttons">
        <a href="changeData" class="router">{{{ changeDate }}}</a>
        <a href="changePassword" class="router">{{{ changePassword }}}</a>
        <a href="chat" class="router">{{{ back }}}</a>
        <a href="/" class="router">{{{ exit }}}</a>
    </div>
</div>